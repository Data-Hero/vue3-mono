{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "Node16",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts",
    "src/shims-vue.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
